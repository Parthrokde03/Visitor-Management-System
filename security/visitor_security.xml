<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">

        <!-- Visitor Manager Group -->
        <record id="group_admin" model="res.groups">
            <field name="name">Visitor Admin</field>
            <field name="category_id" ref="base.module_category_hidden" />
            <field name="comment">Managers can approve/cancel visits.</field>
        </record>

        <!-- Receptionist Group -->
        <record id="group_employee" model="res.groups">
            <field name="name">Visitor Employee</field>
            <field name="category_id" ref="base.module_category_hidden" />
            <field name="comment">Receptionists can register visitors.</field>
        </record>

        <!-- Record Rule for Admin -->
        <record model="ir.rule" id="visitor_management_admin_rule">
            <field name="name">Visitor Management Access Admin</field>
            <field name="model_id" ref="visitor_management.model_visit_information" />
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_admin'))]" />
        </record>

        <!-- Record Rule for Employee -->
        <record model="ir.rule" id="visitor_management_employee_rule">
            <field name="name">Visitor Management Access Employee</field>
            <field name="model_id" ref="visitor_management.model_visit_information" />
            <field name="domain_force">[('employee.user_id', '=', user.id),('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_employee'))]" />
        </record>

        <!-- Visitor Mail Template Editor (inherits Odoo Mail Template Editor) -->
        <record id="group_visitor_manager_template_editor" model="res.groups">
            <field name="name">Visitor Manager Mail Template Editor</field>
            <field name="category_id" ref="base.module_category_hidden" />
            <field name="implied_ids" eval="[(4, ref('mail.group_mail_template_editor'))]" />
        </record>

    </data>
</odoo>