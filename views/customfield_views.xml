<odoo>
    <data>
        <record id="view_company_form_custom_fields" model="ir.ui.view">
            <field name="name">res.company.form.custom.fields</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form" />
            <field name="arch" type="xml">
                <notebook position="inside">

                    <page string="Locations">
                        <field name="location_ids">
                            <list>
                                <field name="name" />
                                <field name="nda" />
                                <!-- <field name="nda_required" string="Required" /> -->
                                <field name="photo" />
                                <!-- <field name="photo_required" string="Required" /> -->
                                <field name="question" />
                                <!-- <field name="question_required" string="Required" /> -->
                            </list>

                            <form string="Location">

                                <sheet>
                                    <group>
                                        <field name="name" string="Location" />
                                    </group>

                                    <!-- 2 columns: left = feature, right = its Required -->
                                    <group>
                                        <!-- left column -->
                                        <group>
                                            <field name="nda" />
                                            <field name="photo" />
                                            <field name="question" />
                                        </group>

                                        <!-- right column -->
                                        <group>
                                            <field name="nda_required" string="Required"
                                                attrs="{'readonly':[('nda','=',False)]}" />
                                            <field name="photo_required" string="Required"
                                                attrs="{'readonly':[('photo','=',False)]}" />
                                            <field name="question_required" string="Required"
                                                attrs="{'readonly':[('question','=',False)]}" />
                                        </group>
                                    </group>

                                    <group string="Additional Questions">
                                        <field name="additional_question_ids" mode="list">
                                            <list editable="bottom">
                                                <field name="question_text" />
                                                <field name="question_type" />
                                                <field name="required" />
                                            </list>
                                        </field>
                                    </group>

                                    <group string="Visitor Fields">
                                        <field name="visitor_field_ids" mode="list">
                                            <list editable="bottom">
                                                <field name="field_id"
                                                    context="{'default_model_id': visitor_model_id}"
                                                    domain="[('model_id', '=', visitor_model_id), ('state','in',['manual','base'])]" />
                                                <field name="visitor_model_id"/>
                                                <field name="label" />
                                                <field name="field_type" />
                                                <field name="enabled" />
                                                <field name="required" />
                                            </list>
                                        </field>
                                    </group>


                                    <group string="NDA Content">
                                        <field name="nda_details" widget="html"
                                            placeholder="Write NDA content here..." />
                                    </group>
                                </sheet>
                            </form>


                        </field>
                    </page>


                </notebook>
            </field>
        </record>
    </data>
</odoo>