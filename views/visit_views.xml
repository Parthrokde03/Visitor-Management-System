    <!-- Action -->
    <record id="action_visit_information" model="ir.actions.act_window">
        <field name="name">Visit</field>
        <field name="res_model">visit.information</field>
        <field name="path">visitor</field>
        <field name="view_mode">kanban,list,form,graph</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
