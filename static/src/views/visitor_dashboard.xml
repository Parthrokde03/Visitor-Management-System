<?xml version="1.0" encoding="UTF-8"?>

<templates>
    <t t-name="visitor_management.VisitorDashboard" owl="1">
        <div
            class="container-fluid py-4 border-bottom bg-view d-flex justify-content-center align-items-center">
            <div class="row justify-content-center text-center w-100">
                <div class="col-12">
                    <div
                        class="d-flex flex-wrap justify-content-center align-items-center gap-4 px-3 mb-3">

                        <!-- Heading -->
                        <div>
                            <h4 class="fw-bold text-dark mb-0">Today's Visit</h4>
                        </div>

                        <!-- Pending -->
                        <div t-on-click="setSearchContext" data-status="pending">
                            <button type="button"
                                t-att-class="{
                'btn': true, 'px-4': true, 'py-2': true, 'fw-normal': true,
                'btn-outline-primary': !isActive('pending'),
                'btn-primary text-white active': isActive('pending')}">
                                <div class="d-flex align-items-center gap-2 fs-5">
                                    <span>Pending:</span>
                                    <span t-out="state.statusCounts['pending']" />
                                </div>
                            </button>
                        </div>

                        <!-- Approved -->
                        <div t-on-click="setSearchContext" data-status="approved">
                            <button type="button"
                                t-att-class="{
                'btn': true, 'px-4': true, 'py-2': true, 'fw-normal': true,
                'btn-outline-success': !isActive('approved'),
                'btn-success text-white active': isActive('approved')}">
                                <div class="d-flex align-items-center gap-2 fs-5">
                                    <span>Approved:</span>
                                    <span t-out="state.statusCounts['approved']" />
                                </div>
                            </button>
                        </div>

                        <!-- Cancelled -->
                        <div t-on-click="setSearchContext" data-status="cancelled">
                            <button type="button"
                                t-att-class="{
                'btn': true, 'px-4': true, 'py-2': true, 'fw-normal': true,
                'btn-outline-danger': !isActive('cancelled'),
                'btn-danger text-white active': isActive('cancelled')}">
                                <div class="d-flex align-items-center gap-2 fs-5">
                                    <span>Cancelled:</span>
                                    <span t-out="state.statusCounts['cancelled']" />
                                </div>
                            </button>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </t>
</templates>
   